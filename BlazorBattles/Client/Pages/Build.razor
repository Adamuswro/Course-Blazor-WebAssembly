@page "/build"
@inject IBananaService BananaService
@inject IUnitService UnitService
 
<h3>Build</h3>

<div class="form-group">
    <select @bind="seletedUnitId" class="form-control">
        @foreach (var unit in UnitService.Units)
        {
            <option value="@unit.Id">@unit.Title // @unit.BananaCost Bananas</option>
        }
    </select>
</div>
<button class="btn btn-primary" @onclick="BuildUnit">Build</button>

@code {
    int seletedUnitId = 1;

    public void BuildUnit()
    {
        var selectedUnit = UnitService.Units.FirstOrDefault(u => u.Id == seletedUnitId);
        BananaService.EatBananas(selectedUnit.BananaCost);
        UnitService.AddUnit(seletedUnitId);
    }
}
